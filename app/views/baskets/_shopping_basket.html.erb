<section class="col-md-12 title-wrap">
  <h4 class="page-name">SHOPPING BASKET</h4>
</section>

<section class="orders-wrap col-md-12">
        <!-- MESSAGES -->
        <% if !@order_item.nil? && @order_item.errors.any? %>
            <ul>
              <% @order_item.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
            </ul>
        <% end %>

<% if @order_items.size == 0 %>
<!-- NO ITEMS IN BASKET -->
  <section class="col-md-12">
    <h6 class="main-basket-text" style="text-align: center;">There are no items in your shopping basket. Please <%= link_to "go back", root_path %> to continue shopping.</h6>
  </section>
    <% else %>
    <!-- PRINT RECEIPT -->
      <% @order_items.each do |order_item| %>
        <%= render 'baskets/basket_item', inventory: order_item.inventory, order_item: order_item, show_total: true %>
      <% end %>
      <!-- SUBTOTAL TABLE -->
        <section class="col-md-6">
          <section class="dropdown-wrap">
               <section name="size-wrap" class="size-wrap">
                 <form>
                     <select name="shipping" class="size-dropdown">
                         <option class="size-dropdown" value="">Select Shipping Method</option>
                         <option value="0">UK Standard Delivery: Free</option>
                         <option value="5">UK Express Delivery (1-2 days): £5</option>
                         <option value="0">International Ground (Federal Express): free</option>
                         <option value="10">International Air (Federal Express 2 days): £10</option>
                     </select>
                     <input type="submit" class="size-dropdown" value="Submit">
                   </form>
                </section>
          </section>
        </section>
        <section class="col-md-5">
          <h4 class="basket-total-text">Total Cost:</h4>
        </section>
        <section class="col-md-1">
          <h4 class="basket-currency-total main-basket-text"><b><%= number_to_currency(current_order.total, unit: "£") %><b></h4>
        </section>
    <% end %>
</section>

<!-- PAYMENT WRAP -->
<section class="col-md-10">
</section>
<section class="payments-wrap col-md-2">

<%= notice %>
  <% if @order_items.size != 0 %>
  <div class='container'>
    <%= form_tag basket_payments_path(@order) do %>
    <section class="payment-button-wrap">
      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.application.secrets.stripe_public_key %>"
            data-description="Payment"
            data-amount="<%= @amount %>"
            data-currency="GBP"
            data-shippingAddress="true">
      </script>
    </section>
    <% end %>
    <% end %>
  </div>
</section>
