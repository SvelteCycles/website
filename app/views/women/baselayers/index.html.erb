<script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.0/slick.min.js"></script>

<section class="title-wrap">
  <h2 class="page-name">Women | Baselayers</h2>
</section>

  <div class="slider multiple-items">
    <% if @womens_baselayers.any? %>
      <% @womens_baselayers.each do |baselayer| %>
        <div class="item">
          <a href="/women/baselayers/<%= baselayer.id %>">
            <img class="carousel-image" src="<%= baselayer.product_images.first.photo.url %>"/>
          </a>
          <div class="item-text">
            <h4><%= baselayer.product.name.upcase %></h4>
            <h4>Â£<%= baselayer.product.price %></h4>
          </div>
        </div>
      <% end %>
      <% else %>
        <p>There are currently no baselayers available.</p>
    <% end %>
  </div>


<script>
  $(document).ready(function () {

      $('.multiple-items').slick({
          infinite: true,
          arrows: true,
          speed: 300,
          slidesToShow: 3,
          slidesToScroll: 2
      });


  });
</script>
