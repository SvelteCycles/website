

    <section class="title-wrap col-md-12-">
      <h2 class="page-name"><a href="/women/">Women</a> | <a href="/women/jerseys">Jerseys</a> | <%= @jersey.product.name %></h2>
    </section>

    <section class="front-image-wrap col-md-4">
      <img src="<%= @jersey.product_images.first.photo.url %>" class="product-image image-zoom" data-zoom-image="<%= @jersey.product_images.first.photo.url %>">
    </section>

    <section class="back-image-wrap col-md-4">
      <img src="<%= @jersey.product_images.last.photo.url %>" class="product-image image-zoom" data-zoom-image="<%= @jersey.product_images.first.photo.url %>">
    </section>

    <section class="info-wrap col-md-4">
      <section class="name-price-wrap">
        <h1 class="product-name"><%= @jersey.product.name %></h1>
        <h3 class="product-price">Â£<%= @jersey.product.price %></h3>
      </section>

      <section class="product-tabs-wrap">
        <section class="product-tabs">
          <ul class="list-inline product-submenu">
            <li class="product-text details-submenu active"><a id="details" href="#tab1">Details</a></li>
            <li class="product-text description-submenu"><a id="description" href="#tab2">Description</a></li>
            <li class="product-text sizing-submenu"><a id="sizing" href="#tab3">Sizing</a></li>
          </ul>
          <section class="tab-content">
            <section class="tab1 tab active">
              <%= @jersey.product.details %>
            </section>
            <section class="tab2 tab">
              <%= @jersey.product.description %>
            </section>
            <section class="tab3 tab">
              <table class="table-position">
                <tr>
                  <th class="table-cell"></th>
                  <th class="table-cell">S</th>
                  <th class="table-cell">M</th>
                  <th class="table-cell">L</th>
                </tr>
                <tr>
                  <td class="table-body-column table-cell">Chest:</td>
                  <td class="table-cell">86</td>
                  <td class="table-cell">91</td>
                  <td class="table-cell">96</td>
                </tr>
                <tr>
                  <td class="table-body-column table-cell">Waist:</td>
                  <td class="table-cell">71</td>
                  <td class="table-cell">76</td>
                  <td class="table-cell">81</td>
                </tr>
                <tr>
                  <td class="table-body-column table-cell">Dress Size (U.K.):</td>
                  <td class="table-cell">4</td>
                  <td class="table-cell">6/8</td>
                  <td class="table-cell">10/12</td>
                </tr>
              </table>
            </section>

          </section>
        </section>
        <section class="info-box">
          <section class="description-text">
          </section>
        </section>
      </section>

      <section class="dropdown-wrap">
        <section name="size-wrap" class="size-wrap">
          <form action="/order_items" data-remote="true" method="post">
              <select name="size" class="size-dropdown">
                  <option class="size-dropdown" value="">Select Size</option>
                  <option value="small">Small</option>
                  <option value="medium">Medium</option>
                  <option value="large">Large</option>
              </select>
        </section>

        <section class="add-to-wrap">
              <input name="gender" type="hidden" value="female"/>
              <input name="product_id" type="hidden" value="<%= @jersey.product.id %>"/>
              <button class="add-to-bag">Add To Bag</button>
          </form>
        </section>
      </section>

    </section>

    <section class="button-wrap col-md-12">
      <section class="middle-button-wrap">
        <a href="#product-carousel" id="scroll-down"><img class="down-arrow" src="/assets/downarrow-01.png"></a>
      </section>
    </section>

    <div id="up-button-wrap col-md-12">
      <section class="middle-button-wrap">
        <a href="#"><img class="down-arrow" src="/assets/downarrow-01.png"></a>
      </section>
    </div>

    <section id="product-carousel" class="single-item" data-slick='{"slidesToShow" : 3, "slidesToScroll": 3'>
      <div class="slideshow-slide"><img class="slideshow-image" src="https://s3.amazonaws.com/sveltewebsite/home_background_1.JPG"></div>
      <div class="slideshow-slide"><img class="slideshow-image" src="https://s3.amazonaws.com/sveltewebsite/home_background_2.JPG"></div>
      <div class="slideshow-slide"><img class="slideshow-image" src="https://s3.amazonaws.com/sveltewebsite/home_background_3.jpeg"></div>
    </section>

    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.0/slick.min.js"></script>
