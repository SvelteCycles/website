<script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.0/slick.min.js"></script>

<section class="title-wrap">
  <h2 class="page-name">Men | Bottoms</h2>
</section>

  <div class="slider multiple-items">
    <% if @mens_bottoms.any? %>
      <% @mens_bottoms.each do |bottoms| %>
        <div class="item">
          <a href="/men/bottoms/<%= bottoms.id %>">
            <img class="carousel-image" src="<%= bottoms.product_images.first.photo.url %>"/>
          </a>
          <div class="item-text">
            <h4><%= bottoms.product.name.upcase %></h4>
            <h4>Â£<%= bottoms.product.price %></h4>
          </div>
        </div>
      <% end %>
      <% else %>
        <p>There are currently no bottoms available.</p>
    <% end %>
  </div>


<script>
  $(document).ready(function () {

      $('.multiple-items').slick({
          infinite: true,
          arrows: true,
          speed: 300,
          slidesToShow: 3,
          slidesToScroll: 2
      });


  });
</script>
