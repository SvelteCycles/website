<script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.0/slick.min.js"></script>

<section class="title-wrap">
  <h2 class="page-name">Men | Shirts</h2>
</section>

  <div class="slider multiple-items">
    <% if @mens_shirts.any? %>
      <% @mens_shirts.each do |shirt| %>
        <div class="item">
          <a href="/men/shirts/<%= shirt.id %>">
            <img class="carousel-image" src="<%= shirt.product_images.first.photo.url %>"/>
          </a>
          <div class="item-text">
            <h4><%= shirt.product.name.upcase %></h4>
            <h4>Â£<%= shirt.product.price %></h4>
          </div>
        </div>
      <% end %>
      <% else %>
        <p>There are currently no shirts available.</p>
    <% end %>
  </div>


<script>
  $(document).ready(function () {

      $('.multiple-items').slick({
          infinite: true,
          arrows: true,
          speed: 300,
          slidesToShow: 3,
          slidesToScroll: 2
      });


  });
</script>
